{
  "name": "validar",
  "version": "1.0.7",
  "description": "Object schema validation runner",
  "main": "lib",
  "types": "lib",
  "files": [
    "lib",
    "src"
  ],
  "engines": {
    "node:": ">=v8.16.1"
  },
  "dependencies": {
    "deep-for-each": "^3.0.0",
    "p-is-promise": "^3.0.0",
    "set-value": "^3.0.1",
    "undefsafe": "^2.0.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^13.1.2",
    "@types/set-value": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "del-cli": "^2.0.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-config-standard-with-typescript": "^11.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.1",
    "jest": "^24.9.0",
    "jest-junit": "^10.0.0",
    "jest-watch-typeahead": "^0.4.0",
    "lint-staged": "^10.0.2",
    "move-file-cli": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.6.2"
  },
  "scripts": {
    "prepublishOnly": "npm run build && npm run test && move-file ./docs/README.md ./README.md",
    "postpublish": "move-file ./README.md ./docs/README.md",
    "ci:test": "jest --runInBand --reporters=default --reporters=jest-junit --coverage --coverageDirectory=coverage",
    "test": "jest --verbose --runInBand --coverage --no-cache",
    "test:watch": "jest --watch --runInBand",
    "format": "prettier --write \"{./src,./tests}/**/*\"",
    "fix:src": "eslint --fix \"./src/**/*.{js,jsx,ts,tsx}\"",
    "fix:tests": "eslint --fix \"./tests/**/*.{js,jsx,ts,tsx}\"",
    "fix": "npm-run-all -p fix:*",
    "build": "del lib && del .buildcache && tsc",
    "build:watch": "del lib && del .buildcache && tsc --watch"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "jest-junit": {
    "outputDirectory": "./reports/junit",
    "outputName": "js-test-results.xml"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "tests/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivandotv/validar.git"
  },
  "author": "Ivan Vlatkovic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ivandotv/validar/issues"
  },
  "homepage": "https://github.com/ivandotv/validar#readme",
  "keywords": [
    "validator",
    "validation",
    "object schema",
    "validation runner"
  ]
}
